extends default

block header
 header.header
          text(style="font-size:80px;") THE MAZE RUNNING MATH
block content 
    .container
      .row
        form(method='GET' action='/answer')
                    div.form-group
                     label(style="font-size:50px;") Question number is : #{qnumber} 
                     .input-group
                        input#name.form-control.input-lg(type='hidden', value=`${qnumber}` name='qq')                        
                        input#answer.form-control.input-lg(type='text',  name='answer'  maxlength="3" style="margin-top:10%; width:350px;height:200px;font-size:100px;")
                        span.input-group-btn
                          button.btn(type='submit', style="margin-top:11.7%; width:300px;height:200px;font-size:100px;background-color:#A13F22;color:#EDD9A0") Ans!
